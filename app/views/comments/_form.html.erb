<%= form_with(model: [pin, pin.comments.build], id: dom_id(pin, :comment_form)) do |form| %>
  <div class="form-field">
    <%= form.label :body, "Tu comentario:", class: "form-label" %><br>
    <%= form.text_area :body, rows: 4, class: "form-input" %>
  </div>
  <div class="actions" style="margin-top: 10px;">
    <%= form.submit "Enviar Comentario", class: "button" %>
  </div>
<% end %>
