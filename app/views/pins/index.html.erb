<h1>Todos los Pins</h1>

<%= link_to "Nuevo Pin", new_pin_path %>

<hr>

<div id="pins">
  <% @pins.each do |pin| %>
    <div>
      <% if pin.image.attached? %>
        <%= link_to pin do %>
          <%= image_tag pin.image, width: "300px" %>
        <% end %>
      <% end %>
      <p><%= pin.description %></p>
      <p><em>Publicado por: <%= pin.user.email %></em></p>
    </div>
    <hr>
  <% end %>
</div>
