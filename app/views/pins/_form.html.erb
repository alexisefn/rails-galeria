<h1>Nuevo Pin</h1>

<%= form_with(model: @pin) do |form| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> impidieron guardar este pin:</h2>
      <ul>
        <% @pin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image, "Imagen" %>
    <%= form.file_field :image, required: true %>
  </div>

